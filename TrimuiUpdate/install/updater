#!/bin/sh
sync

DIR=$(dirname "$0")

if [ -f /usr/trimui/bin/StockUI ] ; then
	notify 100 already installed
else
	notify 0 installing MinUI
	
	sleep 1
	
	notify 25 renaming MainUI to StockUI
	mv "/usr/trimui/bin/MainUI" "/usr/trimui/bin/StockUI"
	
	sleep 1
	
	notify 50 installing faux MainUI
	cp -f "$DIR/MainUI" "/usr/trimui/bin/MainUI"
	
	sleep 1
	
	notify 75 installing libmmenu.so
	cp "$DIR/libmmenu.so" "/usr/trimui/lib"
	
	sleep 1
	
	notify 100 installed MinUI
	sync
fi

sleep 1
notify 100 quit